{
  "name": "nostr-chat-widget-react",
  "version": "1.0.7",
  "description": "A react component that provides a live-chat widget over nostr.",
  "main": "./dist/nostr-chat-widget-react.umd.js",
  "module": "./dist/nostr-chat-widget-react.es.js",
  "exports": {
    ".": {
      "import": "./dist/nostr-chat-widget-react.es.js",
      "require": "./dist/nostr-chat-widget-react.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": false,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leesalminen/nostr-chat-widget-react.git"
  },
  "author": "Lee Salminen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leesalminen/nostr-chat-widget-react/issues"
  },
  "homepage": "https://github.com/leesalminen/nostr-chat-widget-react#readme",
  "peerDependencies": {
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.19.1",
    "@testing-library/react": "^13.4.0",
    "@vitejs/plugin-react": "^3.0.1",
    "c8": "^7.12.0",
    "eslint": "^8.31.0",
    "eslint-plugin-react": "^7.32.0",
    "jsdom": "^21.0.0",
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2",
    "react-test-renderer": "^18.2.0",
    "sass": "^1.57.1",
    "vite": "^4.0.4",
    "vite-plugin-css-injected-by-js": "^2.3.1",
    "vitest": "^0.27.1"
  },
  "dependencies": {
    "nostr-react": "^0.6.1",
    "nostr-tools": "^1.1.1"
  }
}
